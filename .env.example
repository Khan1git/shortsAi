# Auth.js (NextAuth) - required
# Generate with: npx auth secret
AUTH_SECRET=

# Optional: full URL of your app (defaults to host in dev)
# AUTH_URL=http://localhost:3000

# Firebase Client (for login/signup in the browser)
# From Firebase Console > Project settings > General > Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
NEXT_PUBLIC_FIREBASE_APP_ID=

# Firebase Admin (for verifying ID tokens on the server)
# From Firebase Console > Project settings > Service accounts > Generate new private key
# Optional: FIREBASE_PROJECT_ID (defaults to NEXT_PUBLIC_FIREBASE_PROJECT_ID)
# FIREBASE_PROJECT_ID=
FIREBASE_ADMIN_CLIENT_EMAIL=
# Private key from the JSON (keep as one line; newlines as \n)
FIREBASE_ADMIN_PRIVATE_KEY=

# YouTube / Google OAuth (see plans/platformconnect.md)
# From Google Cloud Console > APIs & Services > Credentials > OAuth 2.0 Client ID
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Base URL of your app (for OAuth redirect). Local: http://localhost:3000
NEXT_PUBLIC_APP_URL=http://localhost:3000
